!!!5
%html
	%head
		%meta(charset="utf8")
		%meta(http-equiv="X-UA-Compatible" content="chrome=1")
		%title EsSalud - Red Asistencial Puno
		%link{:rel=>'stylesheet', :href=>'/stylesheets/style.css', :type => 'text/css'} 
		%link{:rel=>'stylesheet', :href=>'/stylesheets/nice-principal.css', :type => 'text/css'} 
		%link{:rel=>'stylesheet', :href=>'/stylesheets/slider.css', :type => 'text/css'} 
		%link{:rel=>'stylesheet', :href=>'/stylesheets/pretty-style.css', :type => 'text/css'} 
		
		%script(src="/javascripts/right.js")
		%script(src="/javascripts/custom.js")
		%script(src="/javascripts/slider.js")
	%body
		#wrapper
			%header#main-header
				%figure#logo
					%img(src='/images/logo.png'  alt='essalud')
				%nav#main-nav
					%ul
						%li
							%a#nav_1(href='/')
						%li
							%a#nav_2(href='/profile')
						%li
							%a#nav_3(href='/notice/1')
				#side-bar
					.slider
						%ul#my_slider
							%li
								%img(src="/images/slider/pic_1.jpg" alt="")
							%li 
								%img(src="/images/slider/pic_2.jpg" alt="")
							%li
								%img(src="/images/slider/pic_3.jpg" alt="")
							%li
								%img(src="/images/slider/pic_4.jpg" alt="")
						#counter
				#subnav= @path
			#main-container= yield
			%footer#main-footer
				#footer-widgets
					#centros-widgets
						%h4.widgettitle Centros Asistenciales
						%ul.list-widgets
							%li.centro Puno
							%li.centro Juli
							%li.centro Pedro	
