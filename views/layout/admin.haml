!!!5
%html
	%head
		%meta(charset="utf8")
		%meta(http-equiv="X-UA-Compatible" content="chrome=1")
		%title EsSalud - Red Asistencial Puno
		%link{:rel=>'stylesheet', :href=>'/stylesheets/style.css', :type => 'text/css'} 
		%link{:rel=>'stylesheet', :href=>'/stylesheets/nice-principal.css', :type => 'text/css'} 
		%link{:rel=>'stylesheet', :href=>'/stylesheets/pretty-style.css', :type => 'text/css'} 
		%script(src="/javascripts/right.js")
		%script(src="/javascripts/admin_tools.js")
	%body
		#wrapper
			%header#main-header
				%figure#logo
					%img(src='/images/logo.png'  alt='essalud')
				.lagout
					= logout()
				%nav#pretty-nav
					%ul
						%li
							%a(class="selected_" href='/admin/notice') Noticias
						%li
							%a(class="an_selected_" href='/admin/document') Documentos
				#pretty-subnav
					%ul
						%li
							%a(href="/notice/new") Publicar Nueva Noticia
						%li
							%a(href="/document/new") Subir Nuevo Documento
			#main-container
				//.pretty-right-content
				= yield
			%footer#main-footer
				#footer-widgets
					#centros-widgets
						%h4.widgettitle Centros Asistenciales
						%ul.list-widgets
							%li.centro Puno
							%li.centro Juli
							%li.centro Pedro	
